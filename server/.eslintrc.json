{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-param-reassign": 0,
    "arrow-body-style": 0,
    "no-console": 0,
    "import/no-dynamic-require": 0,
    "consistent-return": 0,
    "no-unused-vars": [1, {"vars": "all", "args": "none", "varsIgnorePattern": "should"}],
    "no-underscore-dangle": ["error", { "allow": ["_id", "_json", "_headers", "_httpMessage"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js"]}]
  }
}
